<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/navBarEntryTextView"
            android:gravity="center"
            android:textColor="@color/navBarBlue"
            fontPath="fonts/Exo2-Regular.ttf"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/reservationSubMenuLayout"
        android:orientation="vertical"
        android:layout_marginBottom="-80dp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/red"
            fontPath="fonts/Exo2-Regular.ttf"
            android:id="@+id/onGoingReservationTextView"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/logoutborder"
            android:text="On-Going Reservation"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/red"
            fontPath="fonts/Exo2-Regular.ttf"
            android:id="@+id/checkOutReservationTextView"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/logoutborder"
            android:text="Checkout Reservation"
            />

    </LinearLayout>
</LinearLayout>