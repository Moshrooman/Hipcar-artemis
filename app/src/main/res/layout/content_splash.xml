<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash.SplashActivity"
    tools:showIn="@layout/activity_splash"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/hipcarlogo"
        android:layout_centerInParent="true"
        android:id="@+id/hipCarLogoImageView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/hipCarLogoImageView"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/A.json"
            android:id="@+id/aLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/R.json"
            android:id="@+id/rLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/T.json"
            android:id="@+id/tLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/E.json"
            android:id="@+id/eLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/M.json"
            android:id="@+id/mLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/I.json"
            android:id="@+id/iLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="Mobilo/S.json"
            android:id="@+id/sLotte"
            app:lottie_colorFilter="@color/red"
            app:lottie_autoPlay="true"
            />

    </LinearLayout>



</RelativeLayout>
